<% if user_signed_in? %>
	<% if code.favorited_by?(current_user) %>
		<li id="fav-<%= code.id %>">
		<%= link_to code_favorites_path(code), method: :delete, class: "fav", remote: true do %>
			<i class="fa fa-heart" aria-hidden="true"></i>
			<span class="favorites_count"><%= code.favorites.count %>
				<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
			</span>
	    <% end %>
	    </li>
	<% else %>
		<li id="fav-<%= code.id %>">
		<%= link_to code_favorites_path(code), method: :post, class: "fav", remote: true do %>
			<i class="fa fa-heart-o" aria-hidden="true"></i>
			<span class="favorites_count"><%= code.favorites.count %>
				<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
			</span>
		<% end %>
		</li>
	<% end %>

<% else %>
	<li id="fav-<%= code.id %>">
		<%= link_to new_user_session_path, class: "fav" do %>
			<i class="fa fa-heart-o" aria-hidden="true"></i>
			<span class="favorites_count"><%= code.favorites.count %>
				<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
			</span>
	    <% end %>
    </li>
<% end %>