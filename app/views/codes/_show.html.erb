
<!-- userの情報 -->
<div class="user_info">
<% if code.user.profile_image.attached? %>
	<%= image_tag code.user.profile_image, :size => '80x80' %>
<% else %>
	<%= image_tag "noimage.png", :size => '80x80' %> 
<% end %>
<%= link_to "#{code.user.name}", user_path(code.user.id) %> /
<%= code.user.gender %> /
<%= code.user.height %>cm<br>
</div>

<!-- codeの情報 -->
<div class="col-xs-7">
	<ul class="bxslider">
		<% code.photos.count.times do |i| %>
		<%= image_tag code.photos[i], :size => '460x500' %>
		<% end %>
    </ul>
</div>
<div class="col-xs-5">

	Title : <%= code.title %><br>
	Explanation : <%= code.body %><br>

	<!-- tag -->
	Tags : <% code.tags.each do |t| %>
	<%= link_to t.tagname, root_path(tag_id: t.id) %> / 
	<% end %>
	<br>
	Post date : <%= code.created_at.strftime('%Y/%m/%d %H:%M') %><br>

	<!-- 編集と削除 -->
	<% if @code.user == current_user %>
	<%= link_to "code_Edit", edit_code_path(@code.id), class: "btn btn-default col-xs-3" %>
	<%= link_to "code_Delete", code_path(@code.id), method: :delete, class: "btn btn-default col-xs-3" %>
	<% end %>
</div>

