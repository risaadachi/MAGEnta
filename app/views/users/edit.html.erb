<h1>Users edit</h1>

<%= form_for (@user) do |f| %>

<div class="field">
	<%=f.label :profile_image %><br>
	<%= f.file_field :profile_image %>
</div>


<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
</div>

<div class="field">
	<%= f.label :gender %><br />
	<%= f.select :gender, ["Man","Woman","Unselect"], autofocus: true, autocomplete: "gender" %>
</div>

<!-- 年齢選択のプルダウン　:selected=>@user.age-->

<div class="field">
	<%= f.label :age %><br />
	<%= f.select :age,["Unselect", "10's or Under","Early 20's","Late 20's","Early 30's","Late 30's","40's or Over"], autofocus: true, autocomplete: "age" %>
</div>


<div class="field">
	<%= f.label :height %><br />
	<%= f.select :height,
	["140cm Under", "141cm", "142cm", "143cm", "144cm",
		"145cm", "146cm", "147cm", "148cm", "149cm", "150cm", "151cm", "152cm",
		"153cm", "154cm", "155cm", "156cm", "157cm", "158cm", "159cm", "160cm",
		"161cm", "162cm", "163cm", "164cm", "165cm", "166cm", "167cm", "168cm",
		"169cm", "170cm", "171cm", "172cm", "173cm", "174cm", "175cm", "176cm",
		"177cm", "178cm", "179cm", "180cm", "181cm", "182cm", "183cm", "184cm",
		"185cm", "186cm", "187cm", "188cm", "189cm", "190cm Over"],
		:prompt=> 'Please select', autofocus: true, autocomplete: "height" %>
	</div>


	<div class="actions">
		<%= f.submit "Update" %>
	</div>
	<% end %>
