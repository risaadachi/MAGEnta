<div class="container">
	<div class="row">

		<h1>管理者　ユーザ一覧</h1>

		<div class="user_index">
			<% @users.each do |user| %>
				<div class="col-sm-3">
					<% if user.profile_image.attached?%>
					    <%= image_tag user.profile_image, :size => '80x80' %> <br>
				    <% else %>
						<%= image_tag "noimage.png", size: '80x80' %> <br>
				    <% end %>
				    <%= user.name %> <br>
				    <%= user.gender %> <br>
				    <%= user.height %>cm <br>
				    		<!-- 削除 -->
					<%= link_to "Delete", user_admins_destroy_path(user.id), method: :delete, class: "btn btn-danger" %><br>
				    <br>
				</div>
			<% end %>
        </div>

		<%= paginate @users, class: "paginate" %>
    </div>
</div>